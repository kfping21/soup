<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景颜色（深紫色半透明） -->
    <solid android:color="#803700B3" /> <!-- 格式：AARRGGBB -->

    <!-- 设置圆角（推荐8-16dp） -->
    <corners android:radius="12dp" />

    <!-- 设置边框（可选） -->
    <stroke
        android:width="1dp"
        android:color="@color/purple_200" /> <!-- 使用之前定义的浅紫色 -->
</shape>